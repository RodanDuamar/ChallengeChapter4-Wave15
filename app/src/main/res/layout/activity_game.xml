<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bg_thunder"
        />

    <FrameLayout
        android:id="@+id/fl_RPS"
        android:layout_width="170dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="400dp"
        >
        <TextView
            android:id="@+id/tv_rock_paper_scissor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:fontFamily="@font/thundercover_font"
            android:textColor="@color/yellow"
            android:textSize="30sp"
            android:text="@string/kertas_gunting_batu"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_pemain1"
        android:layout_width="90dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/fl_RPS"
        app:layout_constraintRight_toLeftOf="@id/fl_RPS"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/tv_pemain1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/pemain_1"/>
        <ImageView
            android:id="@+id/iv_rock_left_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_rock"/>
        <ImageView
            android:id="@+id/iv_paper_left_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_paper"/>
        <ImageView
            android:id="@+id/iv_scissor_left_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_scissor"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_what_they_choose"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/ll_COM"
        app:layout_constraintEnd_toEndOf="@id/ll_COM"
        app:layout_constraintBottom_toTopOf="@id/ll_COM"
        tools:text="What They Choose"/>

    <LinearLayout
        android:id="@+id/ll_COM"
        android:layout_width="90dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/fl_RPS"
        app:layout_constraintLeft_toRightOf="@id/fl_RPS"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/tv_computer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/com"/>
        <ImageView
            android:id="@+id/iv_rock_right_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_rock"/>
        <ImageView
            android:id="@+id/iv_paper_right_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_paper"/>
        <ImageView
            android:id="@+id/iv_scissor_right_player"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_scissor"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_versus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5:4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_pemain1"
        app:layout_constraintRight_toLeftOf="@id/ll_COM"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:id="@+id/tv_status_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/thunder_font"
            android:textColor="@color/yellow"
            android:textSize="30sp"
            tools:text="@string/versus"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_restart"
        android:layout_width="0dp"
        android:layout_height="90dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/iv_restart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_refresh"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>